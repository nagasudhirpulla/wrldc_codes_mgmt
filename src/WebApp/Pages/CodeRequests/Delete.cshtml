@page
@model WebApp.Pages.CodeRequests.DeleteModel
@{
    ViewData["Title"] = "Delete Code Request";
}
@if (Model.CodeRequest != null)
{
    <div class="row justify-content-center align-items-center">
        <div class="col col-md-10 col-lg-8 col-xl-6">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <h3>Are you sure you want to delete this code request ?</h3>
            <span>Description - @Model.CodeRequest.Description</span>
            <div>
                <form asp-action="Delete">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="CodeRequest!.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="./Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
}