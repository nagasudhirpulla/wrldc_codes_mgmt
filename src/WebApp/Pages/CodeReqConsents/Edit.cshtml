@page
@using Core.Enums
@model WebApp.Pages.CodeReqConsents.EditModel
@{
    ViewData["Title"] = "Edit Consent Request";
}
<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col col-md-4 col-lg-4 col-xl-3">
            <h2>@ViewData["Title"]</h2>
            <p>RLDC Remarks - @Model.RLDCRemarks</p>
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="ConsentRequest.Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="ConsentRequest.ApprovalStatus"></label>
                    <select asp-for="ConsentRequest.ApprovalStatus" class="form-control">
                        @foreach (var item in ApprovalStatus.List)
                        {
                            @if (item.Name != ApprovalStatus.Pending.Name)
                            {
                                <option value="@item.Name" selected="@(item.Name == Model.ConsentRequest.ApprovalStatus.Name)">@item.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="ConsentRequest.ApprovalStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConsentRequest.Remarks"></label>
                    <input asp-for="ConsentRequest.Remarks" class="form-control" />
                    <span asp-validation-for="ConsentRequest.Remarks" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
            <a asp-page="./Index">Back to Edit Page</a>
        </div>
    </div>
</div>
