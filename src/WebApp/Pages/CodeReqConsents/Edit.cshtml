@page
@using Core.Enums
@model WebApp.Pages.CodeReqConsents.EditModel
@{
    ViewData["Title"] = "Edit Code Request Consent";
}
<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col col-md-4 col-lg-4 col-xl-3">
            <h2>@ViewData["Title"]</h2>
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="CodeRequestConsent.Id" type="hidden" />
                    <label asp-for="CodeRequestConsent.ApprovalStatus"></label>
                    <select asp-for="CodeRequestConsent.ApprovalStatus" class="form-control" asp-items="@(new SelectList(ApprovalStatus.List, "Value", "Name"))"></select>
                    <span asp-validation-for="CodeRequestConsent.ApprovalStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodeRequestConsent.RldcRemarks"></label>
                    <input asp-for="CodeRequestConsent.RldcRemarks" class="form-control" readonly />
                    <span asp-validation-for="CodeRequestConsent.RldcRemarks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodeRequestConsent.Remarks"></label>
                    <input asp-for="CodeRequestConsent.Remarks" class="form-control" />
                    <span asp-validation-for="CodeRequestConsent.Remarks" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Approve Consent</button>
            </form>
            <a asp-page="/CodeReqConsents/Index">Back to Edit Page</a>
        </div>
    </div>
</div>
